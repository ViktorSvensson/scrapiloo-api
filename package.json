{
  "name": "@scrapiloo/api",
  "version": "0.2.0",
  "main": "dist/index.js",
  "private": false,
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": false,
    "semi": true,
    "proseWrap": "preserve",
    "arrowParens": "always"
  },
  "scripts": {
    "debug": "nodemon src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverageFrom=src/**/*.ts --coverage",
    "test:setup": "yarn add --dev jest @types/jest ts-jest",
    "build": "tsc",
    "build:watch": "tsc -w",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src*/**/*.ts --fix",
    "lint:setup": "yarn add --dev eslint && eslint --init",
    "build:patch": "yarn build && git add -A && git commit -m \"version: patch\" && npm version patch",
    "build:minor": "yarn build && git add -A && git commit -m \"version: minor\" && npm version minor"
  },
  "author": {
    "name": "Carl Viktor Svensson",
    "url": "https://github.com/viktorsvensson"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ts-node": "^10.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.3.3",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^4.1.3"
  }
}
